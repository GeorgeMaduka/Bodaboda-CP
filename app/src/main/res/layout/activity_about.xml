<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".About"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:background="@drawable/boda_logo"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bodaboda CP Company is a Tanzanian company dedicated to providing safe, reliable, and convenient transportation services through our network of bodaboda riders."
        android:textSize="16dp"
        android:padding="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our Mission"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingLeft="15dp"
        android:paddingBottom="0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our mission is to empower both riders and passengers by connecting them through a secure and accessible platform. "
        android:textSize="16dp"
        android:paddingLeft="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our Values"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingLeft="15dp"
        android:paddingBottom="0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We believe in supporting the local community by providing economic opportunities for our riders and ensuring a positive experience for our society."
        android:textSize="16dp"
        android:paddingLeft="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"/>

</LinearLayout>